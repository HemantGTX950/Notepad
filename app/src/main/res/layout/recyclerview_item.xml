<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/recycler_item_root">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@color/lemon_chiffon">
        <View android:layout_width="4dp"
              android:layout_height="wrap_content"
              android:background="@drawable/rectangle"
              android:id="@+id/rv_left"

              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              />
        <TextView
                android:id="@+id/note_title_rv"
                style="@style/word_title"
                android:layout_toRightOf="@id/rv_left"
                android:layout_width="match_parent"
                android:text="This is a note"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/note_date_rv"
                android:layout_toEndOf="@id/rv_left"
                android:layout_toStartOf="@id/note_date_rv"/>
        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/note_date_rv"
                android:layout_height="wrap_content"
                android:text="Apr 21"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:textSize="18sp"

        />
    </RelativeLayout>

</LinearLayout>